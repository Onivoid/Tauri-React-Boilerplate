{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "boilerplate",
    "version": "0.3.5",
    "identifier": "com.onivoid.boilerplate",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "boilerplate",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "transparent": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "nsis": {
                "installerIcon": "icons/icon.ico",
                "installMode": "perMachine"
            }
        }
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZENjk5Q0E4MzcxQUMyODcKUldTSHdobzNxSnhwYmUzUUdUeG5DZ1AvOG5tbVZEbmpQTHBqakFXWitxVDJCN014RDcybjlWY1IK",
            "endpoints": [
                "https://github.com/Onivoid/Tauri-React-Boilerplate/releases/latest/download/latest.json"
            ],
            "windows": {
                "installMode": "passive"
            }
        }
    }
}
